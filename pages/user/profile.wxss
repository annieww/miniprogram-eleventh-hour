/* pages/user/profile.wxss */
.main {
  /* display: flex; */
  flex-direction: column;
}

.header {
  height: 250rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 20rpx;
}

.user-box {
  margin: 0 auto;
  display: flex;
  margin-bottom: 30rpx;
}

.profilepic {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin-left: 30rpx;
}

.user-name {
  margin-left: 30rpx;
  margin-top: 30rpx;
  position: absolute;
  left: 180rpx;
}

.details {
  position: relative;
  top: 79rpx;
  left: 30rpx;
  font-size: 28rpx;
  text-decoration: underline;
}

.header-content {
  display: flex;
  flex-direction: column;
  text-align: start;
  padding: 30rpx;
}

.page-title {
  font-size: 40rpx;
  color: #FD5200;
  font-weight: bold;
}

.my-info {
  margin-bottom: 40rpx;
  height: 160rpx;
  background-color: white;
  border-radius: 20rpx;
  border: 1px solid #FD5200;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.my-status {
  margin-bottom: 40rpx;
  height: 160rpx;
  background-color: white;
  border-radius: 20rpx;
  border: 1px solid #FD5200;
  padding: 20rpx;
}

.info-title {
  font-size: 40rpx;
  font-weight: bold;
}

.info-btn {
  display: flex;
  justify-content: space-between;
}

.info-edit, .info-preview {
  background-color: transparent;
  border-radius: 20rpx;
  border: 1px solid grey;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  font-size: 35rpx;
}

.info-edit {
  margin-right: 15rpx
}

.status-title {
  font-size: 40rpx;
  font-weight: bold;
}

.review {
  background-color: rgb(245, 241, 233);
  border-radius: 20rpx;
  border: 1px solid grey;
  width: 300rpx;
  text-align: center;
  margin: 20rpx auto;
  padding: 15rpx 0;
  font-size: 35rpx;
}

.my-booking-box {
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
  margin-bottom: 10rpx;
}

.swiper-title {
  margin-top: 20rpx;
  padding-left: 5%;
  padding-right: 5%;
  font-size: 40rpx;
  font-weight: 700;
}

.my-favorite-box {
  padding: 20rpx;
  background-color: rgb(245, 241, 233);
}

.pet-scroll-view {
  height: 240rpx;
  margin-bottom: 20rpx;
  /* background-color: #E4E4E4; */
  /* border: 1px solid rgba(0, 181, 163, 1); */

}
.scroll-title {
  margin-left: 30rpx;
  font-weight: bold;
  font-size: 40rpx;
}

.filter {
  position: absolute;
  background-color: black;
  opacity: 20%;
  width: 100%;
  height: 100%;
  border-radius: 14rpx;
  z-index: 1;
}

