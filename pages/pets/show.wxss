/* pages/pets/show.wxss */

/* pet image */
.pet-img {
  z-index: 1;
  position: sticky;
  width: 100vw;
  height: 700rpx;
  top: 0;
	background-color: rgb(177, 171, 171);
}

.favorite-share-box {
	display: flex;
}

/* .favorite-icon {
  position: absolute;
  top: 30rpx;
  right: 40rpx;
  z-index: 2;
} */

.share-icon {
	width: 70rpx;
	height: 70rpx;
}

.share-box {
	width: 70rpx;
	height: 70rpx;
}

.heart-icon {
	width: 70rpx;
	height: 70rpx;
	margin-right: 10rpx;
}

.need-box {
	display: flex;
}

.need-icon {
	height: 70rpx;
	width: 70rpx;
	margin-left: 6rpx;
}

.pet-avt {
  height: 700rpx;
  object-fit: cover;
	width: 100%;
}

/* pet card */
.pet-card {
	padding: 20rpx;
	margin-bottom: 60rpx;
}

.pet-name {
  font-size: 40rpx;
  font-weight: bold;
  color: black;
  margin-bottom: 40rpx;
}

.pet-info {
	padding-top: 30rpx;
	padding-bottom: 30rpx;
  display: flex;
  justify-content: space-evenly;
	background-color: #eeeeee;
	border-radius: 30rpx;
}

.info-text {
	font-weight: 300;
}

.yes-no {
  display: flex;
  justify-content: start;
}

.status-icon {
  width: 32rpx;
	height: 32rpx;
	margin-top: 8rpx;
  margin-left: 10rpx;
}

.more-info {
  display: flex;
  flex-direction: column;
}

.info-title {
	font-weight: 500;
	margin-top: 30px;
}

.pet-name-box {
	display: flex;
	justify-content: space-between;
}

.special-need {
	font-size: 28rpx;
	font-weight: 400;
	background-color: #fb6f92;
	margin-top: 8rpx;
	color:white;
	width: 200rpx;
	border-radius: 20rpx;
	padding: 4rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.gender-box {
	display: flex;
	justify-content: start;
}

.pet-gender-icon {
  width: 32rpx;
  height: 32rpx;
  margin-top: 8rpx;
  margin-left: 6rpx;
}

.buttons-box {
  display: flex;
  margin: 20rpx;
	gap: 30rpx;
}

.bottom-container {
  z-index: 3;
  position: relative;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
	margin-top: -40rpx;
  background-color: white;
  padding: 20rpx;
	min-height: 60vh;
}

.mask {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: rgba(0, 0, 0, 0.2);
	z-index: 9999;
}

.window {
	display: flex;
	flex-direction: column;
	justify-content: start;
	align-items: center;
	padding: 20rpx;
	width: 75%;
	height: 25%;
	background-color: #fff7f5;
	position: relative;
	border-radius: 40rpx;
	box-shadow: 0 0 15rpx rgba(0,0,0,0.1);
}

.window-btn {
	position: absolute;
	top: 20px;
	right: 20px;
}

.dog-icon {
	width: 90rpx;
	height: 90rpx;
	margin-top: 40rpx;
}

.window-content {
	padding: 5rpx;
	text-align: center;
}

.box {
  display: flex;
}

.contact-box {
	display: flex;
	justify-content: center;
}

.btn-contact {
	background-color:#FD5200;
	color: white;
	border-radius: 40rpx;
}

.btn-sent {
	background-color: white;
	color: #FD5200;
	border: 1px solid #FD5200;
  border-radius: 40rpx;
}

.btn-delete {
	background-color: white;
	color: grey;
	border: 1px solid grey;
	border-radius: 40rpx;
}

.btn-edit {
	background-color: #00B5A3;
	color: white;
	border-radius: 40rpx;
}